<Window x:Class="Dungeoneer.View.AttacksWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
				xmlns:view="clr-namespace:Dungeoneer.View"
				xmlns:viewmodel="clr-namespace:Dungeoneer.ViewModel"
        mc:Ignorable="d"
				WindowStyle="ToolWindow"
        Title="Attacks" Height="240" Width="600">
	<Window.Resources>
		<DataTemplate x:Key="AttackSetTemplate" DataType="{x:Type viewmodel:AttackSetViewModel}">
			<view:AttackSetCard/>
		</DataTemplate>
	</Window.Resources>
	<Grid>
		<Border Margin="4" BorderBrush="White" Background="LightGray" BorderThickness="1,1,1,1" CornerRadius="8,8,8,8">
			<DockPanel>
				<Button DockPanel.Dock="Bottom" Content="Close" FontSize="18" Margin="5" Command="{Binding HideAttacksWindow}"/>
				<ScrollViewer VerticalScrollBarVisibility="Auto">
					<ItemsControl ItemsSource="{Binding AttackSets}"
												ItemTemplate="{DynamicResource AttackSetTemplate}"
												Background="Transparent"/>
				</ScrollViewer>
			</DockPanel>
		</Border>
	</Grid>
</Window>
