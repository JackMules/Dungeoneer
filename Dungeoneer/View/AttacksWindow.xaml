<Window x:Class="Dungeoneer.View.AttacksWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
				xmlns:view="clr-namespace:Dungeoneer.View"
				xmlns:viewmodel="clr-namespace:Dungeoneer.ViewModel"
        mc:Ignorable="d"
				WindowStyle="ToolWindow"
        Title="Attacks" Height="240" Width="600">
	<Window.Resources>
		<DataTemplate x:Key="AttackTemplate" DataType="{x:Type viewmodel:AttackViewModel}">
			<view:AttackCard/>
		</DataTemplate>
	</Window.Resources>
	<Grid>
		<ScrollViewer VerticalScrollBarVisibility="Auto">
			<ItemsControl ItemsSource="{Binding}"
										ItemTemplate="{DynamicResource AttackTemplate}"
										Background="Transparent"/>
		</ScrollViewer>
	</Grid>
</Window>
