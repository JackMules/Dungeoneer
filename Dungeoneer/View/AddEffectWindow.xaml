<Window x:Class="Dungeoneer.View.AddEffectWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Dungeoneer.View"
        mc:Ignorable="d"
        Title="Add Effect" SizeToContent="WidthAndHeight"
				WindowStartupLocation="CenterOwner" WindowStyle="ToolWindow" ResizeMode="NoResize">
	<DockPanel Margin="5">
		<ComboBox DockPanel.Dock="Top" Margin="5" ItemsSource="{Binding EffectList}"/>
		<StackPanel DockPanel.Dock="Bottom">
			<Label x:Name="lblFeedback" Margin="0,0,5,0">
				<Label.Style>
					<Style TargetType="{x:Type Label}">
						<Setter Property="Visibility" Value="Collapsed"/>
						<Style.Triggers>
							<Trigger Property="HasContent" Value="True">
								<Setter Property="Visibility" Value="Visible"/>
							</Trigger>
						</Style.Triggers>
					</Style>
				</Label.Style>
			</Label>
			<WrapPanel HorizontalAlignment="Right" Margin="5">
				<Button IsDefault="True" Name="btnDialogOk" Click="btnDialogOk_Click" MinWidth="60" Margin="0,0,10,0">_Ok</Button>
				<Button IsCancel="True" MinWidth="60">_Cancel</Button>
			</WrapPanel>
		</StackPanel>
		<WrapPanel Orientation="Vertical" Margin="5">
			<CheckBox Content="Temporary" IsChecked="{Binding Temporary}"/>
			<StackPanel Orientation="Horizontal">
					<StackPanel.Style>
						<Style TargetType="{x:Type StackPanel}">
							<Setter Property="Visibility" Value="Collapsed"/>
							<Style.Triggers>
								<DataTrigger Binding="{Binding Temporary}" Value="True">
									<Setter Property="Visibility" Value="Visible"/>
								</DataTrigger>
							</Style.Triggers>
						</Style>
					</StackPanel.Style>
				<Label Content="Duration" Margin="0,5,5,0"/>
				<TextBox Text="{Binding Duration}" Margin="0,5,0,0"/>
			</StackPanel>
			<CheckBox Content="Apply effect every turn" Margin="0,5,0,0" IsChecked="{Binding EveryTurn}"/>
			<StackPanel Orientation="Horizontal">
				<Label Content="Value" Margin="0,5,5,0" VerticalContentAlignment="Center"/>
				<TextBox Text="{Binding Value}" Margin="0,5,0,0" VerticalContentAlignment="Center" HorizontalAlignment="Stretch"/>
			</StackPanel>
		</WrapPanel>
	</DockPanel>
</Window>
