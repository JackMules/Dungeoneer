<Window x:Class="Dungeoneer.View.EffectsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:view="clr-namespace:Dungeoneer.View"
        mc:Ignorable="d"
        WindowStyle="ToolWindow"
        Title="Effects" Height="240" Width="600">
	<Grid>
		<Border Margin="4" BorderBrush="White" Background="LightGray" BorderThickness="1,1,1,1" CornerRadius="8,8,8,8">
			<DockPanel>
				<Button DockPanel.Dock="Bottom" Content="Close" FontSize="18" Margin="5" Command="{Binding HideEffectsWindow}"/>
				<ScrollViewer VerticalScrollBarVisibility="Auto">
					<ListBox ItemsSource="{Binding Effects}"
										Background="Transparent"/>
				</ScrollViewer>
			</DockPanel>
		</Border>
	</Grid>
</Window>
